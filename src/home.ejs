<!DOCTYPE html>
<html>
<head>
	<title>  Restaurant Management System </title>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link href="stylesheets/main.css" rel="stylesheet">
</head>
<body>

  <%- include partials/header.ejs %>

  <div class="container-fluid" id="main-container">

    <p class="text-center">
      <button class="btn btn-success" data-toggle="modal" data-target="#myModal">
        <i class="fa fa-plus"></i>  Add New Order</button>
    </p>

    <!-- <Modal> -->
    <div class="modal fade" id="myModal">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-head">
            <h4 class="text-center modal-title">Customer Details</h4>
          </div>

          <div class="modal-body">
            <form action="" method="POST">
              <input type="text" class="form-field" placeholder="Customer Name" name="customer">
              <input type="text" class="form-field" placeholder="Address" name="address">
              <input type="number" class="form-field" placeholder="Phone Number" name="phone">
              <input type="submit" value="View Menu">
              <input type=

            </form>

          </div>


        </div>
      </div>

    </div>

    <!-- </Modal>-->

    <div class="col-xs-12 col-md-4 col-sm-6">
      <div class="box-wraper">
        <div class="box-head">
          <h5 class="text-center">Ongoing Orders</h5>
        </div>
        <div class="box-body">

        </div>
      </div>
    </div>

    <div class="col-xs-12 col-md-4 col-sm-6">
      <div class="box-wraper">
        <div class="box-head">
          <h5 class="text-center">Orders Completed</h5>
        </div>
        <div class="box-body">

        </div>
      </div>
    </div>

    <div class="col-xs-12 col-md-4 col-sm-6">
      <div class="box-wraper">
        <div class="box-head">
          <h5 class="text-center">Menu</h5>
        </div>
        <div class="box-body">

        </div>
      </div>
    </div>

    <div class="col-xs-12 col-md-4 col-sm-6">
      <div class="box-wraper">
        <div class="box-head">
          <h5 class="text-center">Customer Details</h5>
        </div>
        <div class="box-body">

        </div>
      </div>
    </div>

    <div class="col-xs-12 col-md-4 col-sm-6">
      <div class="box-wraper">
        <div class="box-head">
          <h5 class="text-center">Employee Details</h5>
        </div>
        <div class="box-body">
          <table class="table table-hover">
            <tr>
              <th>Eid</th>
              <th>Name</th>
              <th>Address</th>
              <th>Phone</th>
              <th>Salary</th>
              <th>Gender</th>
            </tr>

            <% for(var i=0;i<emp.length;i++) {%>
              <tr>
                <td> <%= emp[i].eid %></td>
                <td> <%= emp[i].name %></td>
                <td> <%= emp[i].address %></td>
                <td> <%= emp[i].phone %></td>
                <td> <%= emp[i].salary %></td>
                <td> <%= emp[i].gender %></td>
              </tr>
            <%}%>
          </table>
        </div>
      </div>
    </div>

  </div>

  <%- include partials/footer.ejs %>

  <!-- jQuery library -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

  <!-- Latest compiled JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</body>
</html>
